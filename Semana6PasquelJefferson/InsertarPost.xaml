<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana6PasquelJefferson.InsertarPost">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Insertar Datos!"/>
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el Codigo">
            </Entry>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre">
            </Entry>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el Apellido">
            </Entry>

            <Entry x:Name="txtEdad" Placeholder="Ingrese la edad">
            </Entry>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" x:Name="btnInsertar" Text="Insertar" Clicked="btnInsertar_Clicked_1"></Button>
                <Button Grid.Row="0" Grid.Column="1" x:Name="btnRegresar" Text="regresar" Clicked="btnRegresar_Clicked_1"></Button>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>